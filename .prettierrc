{
  "semi": true,
  "trailingComma": "es5",
  "printWidth": 80,
  "singleQuote": true,
  "arrowParens": "always",
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ".prettierrc",
      "options": {
        "parser": "json",
        "tabWidth": 2,
        "printWidth": 80
      }
    },
    {
      "files": ".eslintrc",
      "options": {
        "parser": "json",
        "tabWidth": 2,
        "printWidth": 80
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "printWidth": 80
      }
    }
  ]
}
